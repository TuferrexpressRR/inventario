

<h1 class="d-flex justify-content-center">Lista de productos </h1>
<div class="container px-5 my-5">
    <a href= "<%= new_product_path%>" class="btn btn-primary btn-icon-split">
        <span class="icon text-white-50"> 
        <i class= "fas fa-flag"></i>
            <span class="text"> Crear Producto </span> 
        </span></a>
</div>

<!-- Table preview section-->


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Referencia</th>
                <th>Cantidad</th>
                <th>Acciones</th>
            </tr>        
        </thead>
    

        <tbody>
        <% @products.each do |product| %>
            <tr>
                <td><%= product.id %></td>
                <td><%= product.name %></td>
                <td><%= product.reference %></td>
                <td><%= 0 %></td>
                <td><%= link_to "Detalles", product_path(product),class:'btn btn-primary'  %></td>
            </tr>     
        <% end %>   
        </tbody>
    </table>
    


